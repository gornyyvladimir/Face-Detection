extends layout

block content
	.container
		.columns
			.column.is-half.is-offset-one-quarter
				section.hero
					.hero-body
						.container
							h1.title
								| Face Detection
							h2.subtitle
								| by Gornyy Vladimir
				.controls.space
					.field
						.control
							input(type="file" name="photo" accept="image/*" id="upload")
					.field
						label(class="label") Name
						.control		
							input(type="text" name="username" class="input")
					.field.is-grouped
						.control
							button.button.is-primary.detect
								span.icon.is-small
									i.fas.fa-cogs
								span Detect							
						.control
							button.button.is-success.add
								span.icon.is-small
									i.fas.fa-plus
								span Add	
						.control
							button.button.is-link.search
								span.icon.is-small
									i.fas.fa-search
								span Search	
				.card
					.card-image
						figure.image.is-4by3
							img(src='https://bulma.io/images/placeholders/1280x960.png', alt='Placeholder image')
					.card-content
						.content
							.controls
								.field.is-grouped.is-grouped-centered
									.control					
										button(type="button" class="button rotate" data-deg="-90") Rotate Left
									.control		
										button(type="button" class="button crop") Crop
									.control		
										button(type="button" class="button rotate" data-deg="90") Rotate Right
		.crop-image
			p.crop-image__title Uppload Image
			.crop-image__wrapper
			.crop-image__result
